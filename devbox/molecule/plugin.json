{
  "name": "molecule",
  "packages": [
    "python@3.13",
    "uv@latest",
    "gnumake@latest",
    "yq@latest",
    "git@latest",
    "expect@latest",
    "libisoburn@latest",
    "gnupg@latest",
    "xfsprogs@latest"
  ],
  "env": {
    "VIRTENV": "{{.DevboxRoot}}/molecule",
    "PYPROJECT": "{{.Virtenv}}",
    "MAKEFILE": "{{.Virtenv}}/Makefile"
  },
  "create_files": {
    "{{.Virtenv}}/Makefile": "config/Makefile",
    "{{.Virtenv}}/pyproject.toml": "config/pyproject.toml",
    "{{.Virtenv}}/.yamllint": "config/.yamllint",
    "{{.Virtenv}}/action_version.yml": "config/version.yml",
    "{{.Virtenv}}/action_lint.yml": "config/lint.yml",
    "{{.Virtenv}}/action_build.yml": "config/build.yml",
    "{{.Virtenv}}/action_release.yml": "config/release.yml"
  },
  "shell": {
    "init_hook": [
      ". .venv/bin/activate",
      "echo Run 'make (init|overwrite)' to initialize or update the testing environment",
      "alias make='[ -f Makefile ] && \\make $@ || \\make -f ${MAKEFILE} $@'"
    ],
    "scripts": {
      "init": "\\make -f ${MAKEFILE} init",
      "make": "\\make $( ([ -f Makefile ] || printf %s '-f {{.Virtenv}}/Makefile') )",
      "uv": "\\uv $( ([ -f pyproject.toml ] || printf %s '--directory {{.Virtenv}}') )"
    }
  }
}
